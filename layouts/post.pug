extends ./default.pug

block extra
  main: article.post
    time(datetime=date.toISOString())
      - const year = date.getUTCFullYear()
      - const month = date.getUTCMonth() + 1
      - const day = date.getUTCDate()
      = `${year}/${month < 10 ? `0${month}` : month}/${day < 10 ? `0${day}` : day}`
    h1= title
    .tags
      each tag, index in tags
        a(href=`/tags/${tag.slug}`)= `#${tag.name}`
        if index < tags.length - 1
          | ,
          |
    - const availableLocales = locales.filter(x => x !== locale && lang(x))
    if availableLocales.length > 0
      p Also available in#{' '}
        each otherLocale, index in availableLocales
          a(href=`/${lang(otherLocale).path}`)= otherLocale
    != contents
    .comments
      #disqus_thread
      script.
        var disqus_shortname = 'julioblog'; // required: replace example with your forum shortname

        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      a(href='http://disqus.com' class='dsq-brlink')
        comments powered by
        span.logo-disqus Disqus
